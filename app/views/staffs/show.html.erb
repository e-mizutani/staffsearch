<h1>スタッフ情報詳細</h1>
<div class="container">
   <div class="staff-details">
<div>
<table>
  <p><%= image_tag(@staff.image) %></p>
  <tr>
    <td>スタッフ名</td>
    <td colspan="5"><%= @staff.staff_name %></td>
  </tr>
  
  <tr>
    <td>スタッフID</td>
    <td colspan="5"><%= @staff.cheo_id %></td>
  </tr>

  <tr>
    <td>携帯番号</td>
    <td colspan="5"><%= @staff.staff_tel %></td>
  </tr>

  <tr>
    <td>住所</td>
    <td colspan="5"><%= @staff.staff_add %></td>
  </tr>

  <tr>
    <td>対応スキル</td>
    <td>法人01：<%= @staff.skill_biz01 %></td>
    <td>法人02：<%= @staff.skill_biz02 %></td>
    <td>個人01：<%= @staff.skill_con01 %></td>
    <td>個人02：<%= @staff.skill_con02 %></td>
    <td>特殊案件：<%= @staff.skill_other %></td>
  </tr>
</table>
</div>

     <% if @staff.user == current_user %>
     <%= link_to '編集', edit_staff_path, class: 'btn btn-info' %>　
     <% end %>
   </div>

  <% if @favorite.present? %>
    <%= link_to 'よく使う連絡先から解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'よく使う連絡先に登録', favorites_path(staff_id: @staff.id), method: :post, class: 'btn btn-primary' %>
  <% end %>

   <div class="staff-links">
     <%= link_to '一覧へ戻る', staffs_path, class: 'btn btn-default' %>
   </div>
</div>
